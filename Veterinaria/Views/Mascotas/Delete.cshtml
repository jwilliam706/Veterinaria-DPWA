@model Veterinaria.Models.Mascota

@{
    ViewData["Title"] = "Delete";
}

<h3>Esta seguro de elminar esta mascota?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        &nbsp;&nbsp;
        <a asp-action="Index" class="btn btn-primary">Lista de mascotas</a>
    </form>
</div>
